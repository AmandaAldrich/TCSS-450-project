<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="group4.tcss450.uw.edu.campanion.HomeFragment">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkBoxSemiHook"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/explainState"/>


    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkBoxPet"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewSemiHook"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/checkBoxFullHook"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintLeft_toRightOf="@+id/spinner"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxSemiHook"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="98dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintLeft_toLeftOf="@+id/scrollView2"
        app:layout_constraintRight_toRightOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="@+id/scrollView2"
        app:layout_constraintVertical_bias="0.5" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="91dp"
        android:layout_height="55dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/explainState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stateEx"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintVertical_bias="0.555"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="347dp"
        android:layout_height="353dp"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="Here's where the API info will go"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>

    <TextView
        android:id="@+id/textViewSemiHook"
        android:layout_width="88dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="54dp"
        android:gravity="bottom"
        android:text="@string/semiHook"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxSemiHook"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView
        android:id="@+id/textViewFullHook"
        android:layout_width="88dp"
        android:layout_height="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="19dp"
        android:gravity="bottom"
        android:text="@string/fullHook"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxFullHook"
        app:layout_constraintTop_toBottomOf="@+id/textViewSemiHook" />

    <TextView
        android:id="@+id/textViewPet"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="54dp"
        android:gravity="bottom"
        android:text="@string/pet"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/checkBoxPet"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="64dp"
        android:layout_height="37dp"
        android:text="@string/okay_button"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxPet"
        app:layout_constraintLeft_toRightOf="@+id/textViewFullHook"
        android:layout_marginLeft="32dp" />

</android.support.constraint.ConstraintLayout>
